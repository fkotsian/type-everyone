#play-container{ :style => "background-image: url('#{asset_url @figure_image}');" }

  .row
    .col-md-12
      %h1.text-center.white #{@figure.name}
      %h2.text-center.white #{@figure.description}
      
      .row
        .col-md-2
          #play-buttons-holder
            = form_for(@vote) do |f|
              = f.hidden_field(:figure_id)
              .col-md-6
                = f.submit("ENFP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'enfp-btn')   
                = f.submit("INTP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'intp-btn')
                = f.submit("ESFJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'esfj-btn')           
                = f.submit("ISFP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'isfp-btn')
                = f.submit("INFP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'infp-btn')    
                = f.submit("ENTP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'entp-btn')
                = f.submit("ISFJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'isfj-btn')
                = f.submit("ESFP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'esfp-btn')  
              .col-md-6
                = f.submit("ENFJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'enfj-btn')
                = f.submit("INTJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'intj-btn')
                = f.submit("ESTJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'estj-btn')
                = f.submit("ISTP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'istp-btn')
                = f.submit("INFJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'infj-btn')
                = f.submit("ENTJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'entj-btn')
                = f.submit("ISTJ", class: 'btn ghost-btn mbti-btn btn-lg', id: 'istj-btn')
                = f.submit("ESTP", class: 'btn ghost-btn mbti-btn btn-lg', id: 'estp-btn')
    .row
      .col-md-offset-10.col-md-2
        = link_to "Next", "/type", class: 'btn btn-lg ghost-btn mbti-btn'